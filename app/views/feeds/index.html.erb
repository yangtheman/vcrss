<h1>Listing feeds</h1>

<%= link_to 'Get More Updates', get_updates_feeds_path %>

<table>
  <tr>
    <th>Url</th>
    <th>Feed url</th>
    <th>Author</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @feeds.each do |feed| %>
  <tr>
    <td><%= feed.url %></td>
    <td><%= feed.feed_url %></td>
    <td><%= feed.author %></td>
    <td><%= feed.title %></td>
    <td><%= link_to 'Show', feed %></td>
    <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
    <td><%= link_to 'Destroy', feed, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Feed', new_feed_path %>
